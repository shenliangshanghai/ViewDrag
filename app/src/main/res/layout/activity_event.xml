<?xml version="1.0" encoding="utf-8"?>
<view.shen.com.viewdemo.event.MyLinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_red_dark"
    android:layout_height="match_parent"
    tools:context=".event.EventActivity">


    <view.shen.com.viewdemo.event.MyLinearlayout2
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="100dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="match_parent">

        <view.shen.com.viewdemo.event.MyTextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="textview"/>

    </view.shen.com.viewdemo.event.MyLinearlayout2>

</view.shen.com.viewdemo.event.MyLinearlayout>